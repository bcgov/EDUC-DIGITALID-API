pipeline {
  agent {
      label 'maven35'
  }
  stages {
    stage('Build App') {
      steps {
        sh "mvn -f ./api/pom.xml package"
      }
    }
    stage('Create Image Builder') {
      when {
        expression {
          openshift.withCluster() {
            return !openshift.selector("bc", "digitalid").exists();
          }
        }
      }
      steps {
        script {
          openshift.withCluster() {
            openshift.newBuild("--name=digitalid", "--image-stream=redhat-openjdk18-openshift:1.1", "--binary")
          }
        }
      }
    }
    stage('Build Image') {
      steps {
        script {
          openshift.withCluster() {
            openshift.selector("bc", "digitalid").startBuild("--from-file=./api/target/pen-api-0.0.1.SNAPSHOT.jar", "--wait")
          }
        }
      }
    }
    stage('Promote to DEV') {
      steps {
        script {
          openshift.withCluster() {
            openshift.tag("digitalid:latest", "digitalid:dev")
          }
        }
      }
    }
    stage('Create DEV') {
      when {
        expression {
          openshift.withCluster() {
            return !openshift.selector('dc', 'digitalid-dev').exists()
          }
        }
      }
      steps {
        script {
          openshift.withCluster() {
            openshift.newApp("c2mvws-tools/digitalid:latest", "--name=digitalid-dev", "--namespace=c2mvws-dev").narrow('svc').expose()
          }
        }
      }
    }
  }
}