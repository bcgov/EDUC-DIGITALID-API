pipeline {
  agent {
      label 'maven35'
  }
  stages {
    stage('Build App') {
      steps {
        sh "mvn -f ./api/pom.xml package"
      }
    }
    stage('Create Image Builder') {
      when {
        expression {
          openshift.withCluster() {
            return !openshift.selector("bc", "educ-digitalid-api").exists();
          }
        }
      }
      steps {
        script {
          openshift.withCluster() {
            openshift.newBuild("--name=educ-digitalid-api", "--image-stream=redhat-openjdk18-openshift:1.1", "--binary")
          }
        }
      }
    }
    stage('Build Image') {
      steps {
        script {
          openshift.withCluster() {
            openshift.selector("bc", "educ-digitalid-api").startBuild("--from-file=./api/target/pen-api-0.0.1.SNAPSHOT.jar", "--wait")
          }
        }
      }
    }
    
  }
}